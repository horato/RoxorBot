<base:DialogBase x:Class="RoxorBot.Modules.Main.Views.AddMessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:base="clr-namespace:RoxorBot.Data.Base"
             Width="310" Height="250" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Background="LightBlue">
        <Label Content="Message" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="280"/>
        <TextBox Text="{Binding Message}" HorizontalAlignment="Left" Height="32" Margin="10,46,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="280"/>
        <Label Content="Interval" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Width="280"/>
        <TextBox Text="{Binding Interval}" HorizontalAlignment="Left" Height="32" Margin="10,109,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="280" />
        <Button x:Name="CancelButton" Click="CancelButton_OnClick" Content="Cancel" HorizontalAlignment="Left" Height="36" Margin="175,158,0,0" VerticalAlignment="Top" Width="115"/>
        <Button Command="{Binding AddCommand}" Content="Add" HorizontalAlignment="Left" Height="36" Margin="10,158,0,0" VerticalAlignment="Top" Width="115"/>
    </Grid>
</base:DialogBase>



