<i:EventTrigger x:Class="RoxorBot.Data.ViewHelpers.EventToCommand"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:converters="clr-namespace:RoxorBot.Data.Converters">
    <i:InvokeCommandAction Command="{Binding Command, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=i:EventTrigger}}" />
</i:EventTrigger>
